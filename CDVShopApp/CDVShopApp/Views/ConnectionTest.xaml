<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CDVShopApp.Views.ConnectionTest">
    <ContentPage.Content>
        <ListView x:Name="LvlItems" HasUnevenRows="True">
            <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="1" Margin="5,5,0,0" >
                            <Label Text="{Binding Name}" VerticalOptions="Center" FontSize="20" TextColor="Black" ></Label>
                            <Label Text="{Binding Price}" VerticalOptions="Center" FontSize="20" TextColor="Black"></Label>
                            <Label Text="{Binding Description}" VerticalOptions="Center" FontSize="20" TextColor="Black"></Label>
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>